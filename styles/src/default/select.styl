@import "constants.styl"

select-size($size, $font-size) {
  height: $size;
  padding: 0 ($size / 4);
  font-size: $font-size;
  & > * {
    margin-left: ($size / 4);
    &:first-child {
      margin-left: 0;
    }
  }
}

.c-select {
  select-size(24px, 14px);
  background: white;
  border: 1px solid $color-grey;
  &.-selected {
    border: 1px solid $color-primary;
  }
  &--box {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  &--drop-down {
    position: absolute;
    background: $color-white;
    box-shadow: 0 0 5px rgba($color-black, 0.2);
  }
  &--option {
    padding: 8px;
    &:hover {
      background: $color-light-grey;
    }
  }
}
