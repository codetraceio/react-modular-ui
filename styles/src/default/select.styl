@import "constants.styl"

select-size($size, $font-size) {
  height: $size;
  padding: 0 ($size / 4);
  font-size: $font-size;
  & > * {
    margin-left: ($size / 4);
    &:first-child {
      margin-left: 0;
    }
  }
}

.c-select {
  select-size(24px, 14px);
  background: white;
  border: 1px solid $color-grey;
  display: flex;
  align-items: center;
  &.-selected {
    border: 1px solid $color-primary;
  }
}
