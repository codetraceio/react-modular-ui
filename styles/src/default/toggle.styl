@import "constants.styl";

.c-toggle {
  display: flex;
  flex-direction: row;
  align-items: center;
  cursor: pointer;
  outline: none;

  &--label {
    padding-left: 4px;
    font-size: 14px;
  }

  &--container {
    position: relative;
    outline: none;
    cursor: pointer;
    height 24px;
    width: 34px;
  }

  &--handle {
    position: absolute;
    top: 0;
    left: 0;
    height: 18px;
    width: 18px;
    margin: 3px 0;
    background: $color-light-grey;
    border-radius: 50%;
    box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.25), 0 0 1px 0 rgba(0, 0, 0, 0.12);
    transition: left .3s ease-in-out;
  }

  &--line {
    position: absolute;
    top: 5px;
    height: 14px;
    width: 34px;
    background: $color-grey;
    border-radius: 7px;
    transition: background .3s ease-in-out;
  }

  &.-checked &--handle, &[aria-checked=true] &--handle {
    left: 16px;
  }

  &.-checked &--line, &[aria-checked=true] &--line {
    background: $color-success;
  }

  &.-size-32 &--label {
    font-size: 16px;
  }

  &.-size-32 &--container{
    height: 32px;
    width: 48px;
  }

  &.-size-32 &--handle {
    height: 26px;
    width: 26px;
  }

  &.-size-32 &--line {
    top: 6px;
    height: 20px;
    width: 48px;
    border-radius: 10px;
  }

  &.-size-32.-checked &--handle, &.-size-32[aria-checked=true] &--handle {
    left: 22px;
  }

  &.-disabled {
    opacity: .5;
    pointer-events: none;
  }
}
