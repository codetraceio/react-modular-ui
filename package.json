{
  "name": "react-modular-ui",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "typescript/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/codetraceio/react-modular-ui"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.10",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "coveralls": "^2.13.0",
    "express": "^4.15.2",
    "jest": "^21.2.1",
    "jest-cli": "^22.0.4",
    "node-sass": "^4.9.0",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.1.1",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "tslint-react": "^3.3.3",
    "typescript": "^2.8.3",
    "webpack": "^2.7.0"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "scripts": {
    "start": "node dist/example/server/index.js",
    "test": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-dev": "jest --coverage",
    "test-update": "jest --coverage -u",
    "lint": "./node_modules/tslint/bin/tslint -c tslint.json -t stylish src/**/*.ts",
    "build": "./run/build.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/*.tsx",
      "src/services/*.ts",
      "src/index.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js)$": "./preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.(ts|tsx|js)"
    ]
  }
}
