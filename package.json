{
  "name": "react-modular-ui",
  "version": "1.1.0",
  "main": "dist/index.js",
  "typings": "typescript/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/codetraceio/react-modular-ui"
  },
  "scripts": {
    "start": "node dist/example/server/index.js",
    "test": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-dev": "jest --coverage",
    "test-update": "jest --coverage -u",
    "lint": "./node_modules/tslint/bin/tslint -c tslint.json -t stylish src/**/*.ts",
    "build": "./run/build.sh",
    "watch": "./run/watch.sh"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.0.10",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "coveralls": "^3.0.1",
    "express": "^4.16.3",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "node-sass": "^4.9.0",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.3.2",
    "ts-loader": "^5.3.1",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.7.3",
    "webpack": "^4.8.1",
    "webpack-cli": "^3.3.10"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/*.tsx",
      "src/services/*.ts",
      "src/index.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js)$": "./preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.(ts|tsx|js)"
    ]
  }
}
