{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./typescript",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
}
